{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base",
        "plugin:prettier/recommended"
        // "prettier/prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint",
        "prettier"

    ],
    "rules": {
        "prettier/prettier": "error",
        "vue/no-multiple-template-root": "off"
    }   
}
